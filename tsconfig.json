{
	"compilerOptions": {
		"baseUrl": "./",
		"skipLibCheck": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"jsx": "react",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"paths": {
			"react": ["./node_modules/preact/compat/"],
			"react-dom": ["./node_modules/preact/compat/"]
		}
	},
	"include": ["**/*.ts"],
	"ts-node": {
		"transpileOnly": true,
		"files": true,
		"moduleTypes": {
			"scripts/generateNotes.ts": "cjs"
		}
	}
}
